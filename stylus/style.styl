@import "normalize"

normalize-html5()
normalize-base()
normalize-links()
normalize-typography()
normalize-lists()
normalize-embed()
normalize-figures()

body
  font-family "Benton Sans", "Avenir Next", helvetica, sans-serif

  letter-spacing 0.01em

.container
  max-width 50em
  margin 0 auto
  padding 0 1em

a
  color #f00

h1,
h2,
h3,
h4,
h5,
h6
  font-weight 400
  font-family "Benton Sans Compressed", "Avenir Next Condensed", helvetica, sans-serif

img
  display block
  max-width 100%
  height auto
